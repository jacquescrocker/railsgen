#content.generate_page
  .inner
    %h1 All done. Enjoy your new Ruby on Rails app.
    .box.result_url
      rails -m http://railsgen.com/34322.rb 
      = link_to "Copy", "#"
    
    .box.result_script
      %code
        %pre
          :preserve
            ############## plugin commands #################

            # Markup as Ruby
            plugin 'markaby'

            # RSpec is the original Behaviour Driven Development framework for Ruby.
            plugin 'rspec'

            # RSpec's official Ruby on Rails plugin
            plugin 'rspec-rails'

            # Hampton's favorite Resource System
            plugin 'make_resourceful'

            # Treat an ActiveRecord model as a file attachment, storing its patch, size, content type, etc.
            plugin 'attachment_fu'


            ############## gem commands #################

            # Word to your object mother.
            gem 'fixjour'


            ##############  commands #################

            run "curl -L http://jqueryjs.googlecode.com/files/jquery-1.2.6.min.js > public/javascripts/jquery.js"
            run "curl -L http://jqueryjs.googlecode.com/svn/trunk/plugins/form/jquery.form.js > public/javascripts/jquery.form.js"

            run "rm README"
            run "rm public/index.html"
            run "rm public/favicon.ico"
            run "rm public/robots.txt"
    
    = clear
